<!-- public/index.html -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Putni nalog</title>
    <link rel="stylesheet" href="stylesheets/style.css">
</head>
<body>
<div>
    <table class="tabela">
        <thead>
        <th>Sifra linije</th>
        <th>Naziv linije</th>
        <th>Broj prolazaka </th>
        </thead>
        <tbody>

        <% if (podaciSvi.length>0) { %>
            <% podaciSvi.map((podatak, index) => { %>
            <tr>
                <td><%=podatak.linija%></td>
                <td><%=podatak.naziv_linije%></td>
                <td><%=podatak.broj_prolazaka%></td>

            </tr>

            <% }) %>

        <% } else { %>
            <tr>
                <td colspan="5">No data available.
                </td>
            </tr>

        <% } %>
        </tbody>
    </table>
</div>
</body>
</html>